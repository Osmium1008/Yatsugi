<UserControl xmlns="https://github.com/avaloniaui"
    	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    	x:Class="Yatsugi.Views.StartMenuView">
  	<StackPanel>
		<StackPanel.Styles>
			<Style Selector="TextBlock.Title">
				<Setter Property="FontSize" Value="30" />
				<Setter Property="Margin" Value="30,30,30,30" />
			</Style>
			<Style Selector="Button.Action">
				<Setter Property="FontSize" Value="30" />
				<Setter Property="Width" Value="400" />
				<Setter Property="Height" Value="50" />
				<Setter Property="Margin" Value="50,50,50,50" />
				<Setter Property="HorizontalAlignment" Value="Right" />
			</Style>
		</StackPanel.Styles>
		<TextBlock Classes="Title">Welcome to Yatsugi</TextBlock>
		<Button Classes="Action">貸出</Button>
		<Button Classes="Action">返却</Button>
  	</StackPanel>
</UserControl>
