<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Yatsugi.Views.HistoryView">
    <DockPanel>
        <DockPanel.Styles>
            <Style Selector="TextBlock.TitleText">
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Margin" Value="40,20"/>
            </Style>
        </DockPanel.Styles>
        <TextBlock DockPanel.Dock="Top" Classes="TitleText">貸出履歴</TextBlock>
        <ScrollViewer DockPanel.Dock="Top">
            <ItemsControl Items="{Binding History}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Right" Classes="Action SmallButton" Command="{Binding OnBackButtonClicked}">戻る</Button>
        </DockPanel>
    </DockPanel>
</UserControl>
